#!/bin/bash

merge() {
for file in *.gitignore
do
	case $file in
		Eclipse.gitignore);;
		FlexBuilder.gitignore);;
		VirtualEnv.gitignore);;
		*)
			type=${file/.gitignore}
    		echo
    		echo '########################################'
    		echo '#' $type
    		echo '########################################'
    		echo
    		cat $file
    		echo
	esac
done
}

cd $(dirname $0)
#merge >> GITIGNORE
merge
